<project name="Generates DOM AST Parser for PHP 5.3" default="generateParser" basedir=".">

	<target name="checkUpToDate">
		<uptodate
			property="upToDate"
			srcfile="twig_ast_parser.cup"
			targetfile="../../../src/com/dubture/twig/core/parser/ast/scanner/TwigAstParser.java" />
	</target>

	<target name="generateParser" depends="checkUpToDate" unless="upToDate">
		<java 
			classpath="../../../../com.dubture.twig.parser"
			classname="java_cup.Main"
			input="twig_ast_parser.cup"
			fork="true">
			
			<arg value="-compact_red"/>
			<arg value="-expect"/>
			<arg value="4"/>
			<arg value="-parser"/>
			<arg value="TwigAstParser"/>
			<arg value="-symbols"/>
			<arg value="ParserConstants"/>
			<arg value="-interface"/>
		</java>

		<move
			file="TwigAstParser.java"
			todir="../../../src/com/dubture/twig/core/parser/ast/scanner"/>

		<move
			file="ParserConstants.java"
			todir="../../../src/com/dubture/twig/core/parser/ast/scanner"/>

	</target>

</project>
